{% if f.fontFamily %} --bs-body-font-family: {{ f.fontFamily|raw }};
{% endif %}{% if f.fontWeight %} --bs-body-font-weight: {{ f.fontWeight }};
{% endif %}{% if f.fontStyle %} font-style: {{ f.fontStyle }};
{% endif %}{% if f.lineHeight %} --bs-body-line-height: {{ f.lineHeight|raw }};
{% endif %}
{% if f.fontSize and f.fontSizeSm %}
    --bs-body-font-size: calc({{f.fontSizeSm}}px + ({{f.fontSize}} - {{f.fontSizeSm}}) * ((100vw - 320px) / (1920 - 320)));
{% endif %}
{% if f.color %} --bs-body-color: {{ f.color|raw }};
{% endif %}{% if color.site_bg %} background-color: {{ color.site_bg|raw }};
{% endif %}
}
{% endif %}
{% if f.type == 'menu' %}

{% if f.fontFamily %}
    font-family: {{ f.fontFamily|raw }};
{% if f.fontSize and f.fontSizeSm  %}
    font-size: calc({{f.fontSizeSm}}px + ({{f.fontSize}} - {{f.fontSizeSm}}) * ((100vw - 320px) / (1920 - 320)));
{% endif %}
{% endif %}
}
{% if f.uppercase %}
.navbar-wrapper a.nav-link {
    text-transform: uppercase;
}
{% endif %}
{% endif %}
{% if f.type == 'button' %}
.btn {
{% if f.fontFamily %} font-family: {{ f.fontFamily|raw }};
{% endif %}{% if f.uppercase %} text-transform: uppercase !important;
{% endif %}{% if f.fontStyle %} font-style: {{ f.fontStyle }};
{% endif %}{% if f.fontWeight %} --bs-btn-font-weight: {{ f.fontWeight }};
{% endif %}{% if f.lineHeight %} --bs-btn-line-height: {{ f.lineHeight|raw }};
{% endif %}
{% if f.fontSize and f.fontSizeSm %}
    --bs-btn-font-size: calc({{f.fontSizeSm}}px + ({{f.fontSize}} - {{f.fontSizeSm}}) * ((100vw - 320px) / (1920 - 320)));
{% endif %}
}
{% endif %}
{% endfor %}
{% endif %}

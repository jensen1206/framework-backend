.animated-checkbox {
    display: inline-block;
    & input[type=checkbox] {
        display: none;
        pointer-events: none;

        & + label {
            cursor: pointer;
            display: grid;
            grid-template-columns: auto 3fr;

            & svg {
                width: 2em;
                stroke-width: 5;
                fill: white;

                .box {
                    stroke-dasharray: 320;
                    stroke-dashoffset: 0;
                    fill: white !important;
                }

                .check {
                    stroke-dasharray: 70;
                    stroke-dashoffset: 70;
                    fill: none;
                }
            }

            & span {
                padding-top: .3em;
                margin-left: .3em;
            }
        }

        &:checked + label {
            .box {
                stroke-dashoffset: 320;
                transition: stroke-dashoffset .3s linear;
            }

            .check {
                stroke-dashoffset: 0;
                transition: stroke-dashoffset .3s linear;
            }
        }
    }

    .reverse {
        .box {
            stroke-dashoffset: 0;
            transition: stroke-dashoffset .3s linear;
        }

        .check {
            stroke-dashoffset: 70;
            transition: stroke-dashoffset .3s linear;
        }
    }
}




{% extends 'base.html.twig' %}

{% block title %}{% if title is defined %}{{ title }}{% else %}{{ 'Homepage'|trans }}{% endif %} {{ parent() }}{% endblock %}
 {% block navbar %}
     {{ include('public-navbar.twig') }}
 {% endblock %}
{% block body %}
    <main class="main">
        <div id="public-content" class="container d-flex align-items-center justify-content-center">
            <div class="container mt-5">
                 <div class="text-start fs-1 mt-4">{{ title }}</div>
                <hr/>
                <ul>
                    {% for s in sites %}
                       <li><a href="{% if s.routeName %}{{ path(s.routeName) }}{% else %}{{ path('app_public_slug', {'slug': s.siteSlug}) }}{% endif %}"> {{ s.siteSeo.seoTitle }}</a></li>
                    {% endfor %}
                </ul>
                <hr/>
            </div>
        </div>
    </main>

{% endblock %}
{% block footer %}
    {{ include('public/public-footer.html.twig') }}
{% endblock %}

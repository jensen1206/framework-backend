{% extends 'base-admin.html.twig' %}
{% block title %}{% if title is defined %}{{ title }}{% else %}Web{% endif %} {{ parent() }}{% endblock %}
 {% block navbar %}
     {{ include('admin-navbar-top.html.twig') }}
 {% endblock %}
{% block body %}
    <div id="page-content-wrapper">
        {% if is_granted('MANAGE_MEDIEN', account) %}
            <div class="container-fluid py-3">
                {% if not imagick %}
                    <div class="col-xl-10 col-12 mx-auto">
                        <div class="fs-4 text-danger text-center mt-5">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            {% autoescape false %}
                                {{ 'converter.PHP extension <b>ImageMagick</b> is not installed.'|trans }}
                            {% endautoescape %}
                        </div>
                        <div class="form-text mt-3">
                            {{ 'converter.ImageMagick Â® is a free open source software suite for editing and processing digital images. It can be used to create, edit, assemble or convert bitmap images and supports a variety of file formats including JPEG, PNG, GIF, TIFF and PDF.'|trans }}
                        </div>
                    </div>
                {% else %}
                    <div id="medien-converter-react-app"></div>
                {% endif %}

            </div>
        {% endif %}
    </div>
{% endblock %}
 {% block javascripts %}
     {% if imagick %}
         {{ encore_entry_script_tags('react_medien_converter') }}
     {% endif %}

      <script src="{{ path('javascript_upload_settings') }}"></script>
     {{ parent() }}
 {% endblock %}

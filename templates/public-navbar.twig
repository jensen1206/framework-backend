{% if 'SUPER_ADMIN'|systemInstalled %}
{% if ''|mainNav %}
    {% set nav = ''|mainNav %}
    {{ include('public/app-menu/navigation.html.twig') }}
{% else %}
    <nav id="nav-main-public-menu" class="navbar navbar-expand-lg bg-body-tertiary py-3 fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_public_index') }}"> {{ ''|appSettings.site_name }}</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#offcanvasNavbar"
                    aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar"
                 aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Offcanvas</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-start flex-grow-1 ps-3">
                        <li class="nav-item">
                            <a class="nav-link {% if route_slug == 'privacy' %}active{% endif %}"
                               aria-current="page"
                               href="{{ path('app_public_slug', {'slug': 'privacy'}) }}">{{ 'app.Data protection'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if route_slug == 'imprint' %}active{% endif %}"
                               aria-current="page"
                               href="{{ path('app_public_slug',{'slug': 'imprint'}) }}">{{ 'Imprint'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if route_slug == 'terms' %}active{% endif %}" aria-current="page"
                               href="{{ path('app_public_slug',{'slug': 'terms'}) }}">{{ 'General Terms and conditions'|trans }}</a>
                        </li>

                        {% if is_granted('IS_AUTHENTICATED_FULLY') and app.user.isVerified %}
                            <li class="nav-item py-2 py-lg-1">
                                <div class="vr d-none  d-lg-flex h-100 mx-lg-2 "></div>
                                <hr class="d-lg-none my-2 text-white-50">
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-green" href="{{ path('app_dashboard') }}">Dashboard</a>
                            </li>
                        {% endif %}
                        <li class="nav-item dropdown ms-lg-auto">
                            <a class="nav-link dropdown-toggle {% if route_name matches '{.+?_account}' %}active{% endif %}"
                               href="#" role="button" data-bs-toggle="dropdown"
                               aria-expanded="false">
                                {{ 'Account'|trans }}
                            </a>
                            <ul class="dropdown-menu dropdown-menu-start dropdown-menu-lg-end m-0">
                                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                    {% if app.user.isVerified and 'ACCOUNT_EDIT' in ''|userAccount.voter %}
                                        <li>
                                            <a class="dropdown-item"
                                               href="{{ path('dashboard_show_account', {'id': ''|userAccount.id}) }}">{{ 'Profil'|trans }}
                                            </a>
                                        </li>
                                    {% endif %}
                                    <li>
                                        <a class="dropdown-item"
                                           href="{{ path('app_logout') }}">{{ 'Logout'|trans }}
                                        </a>
                                    </li>
                                {% else %}
                                    <li>
                                        <a class="dropdown-item {% if route_name == 'app_login' %}active{% endif %}"
                                           href="{{ path('app_login') }}">
                                            <i class="bi bi-box-arrow-in-right me-2"></i> {{ 'Login'|trans }}
                                        </a>
                                    </li>
                                    {% if ''|registerSettings.registration_active %}
                                        <li>
                                            <a class="dropdown-item {% if route_name == 'app_register' %}active{% endif %}"
                                               href="{{ path('app_register') }}">
                                                <i class="bi bi-person-add me-2"></i>{{ 'register.Register'|trans }}
                                            </a>
                                        </li>
                                    {% endif %}
                                    {% if ''|registerSettings.show_forgotten_password %}
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li>
                                            <a class="dropdown-item {% if route_name == 'app_forgot_password_request' %}active{% endif %}"
                                               href="{{ path('app_forgot_password_request') }}">
                                                <i class="bi bi-incognito me-2"></i>
                                                {{ 'register.Forgot password'|trans }}
                                            </a>
                                        </li>
                                    {% endif %}
                                {% endif %}
                            </ul>
                        </li>

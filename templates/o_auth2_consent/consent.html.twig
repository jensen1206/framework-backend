            </symbol>
            <symbol id="circle-half" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 0 8 1v14zm0 1A8 8 0 1 1 8 0a8 8 0 0 1 0 16z"/>
            </symbol>
            <symbol id="moon-stars-fill" viewBox="0 0 16 16">
                <path d="M6 .278a.768.768 0 0 1 .08.858 7.208 7.208 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277.527 0 1.04-.055 1.533-.16a.787.787 0 0 1 .81.316.733.733 0 0 1-.031.893A8.349 8.349 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.752.752 0 0 1 6 .278z"/>
                <path d="M10.794 3.148a.217.217 0 0 1 .412 0l.387 1.162c.173.518.579.924 1.097 1.097l1.162.387a.217.217 0 0 1 0 .412l-1.162.387a1.734 1.734 0 0 0-1.097 1.097l-.387 1.162a.217.217 0 0 1-.412 0l-.387-1.162A1.734 1.734 0 0 0 9.31 6.593l-1.162-.387a.217.217 0 0 1 0-.412l1.162-.387a1.734 1.734 0 0 0 1.097-1.097l.387-1.162zM13.863.099a.145.145 0 0 1 .274 0l.258.774c.115.346.386.617.732.732l.774.258a.145.145 0 0 1 0 .274l-.774.258a1.156 1.156 0 0 0-.732.732l-.258.774a.145.145 0 0 1-.274 0l-.258-.774a1.156 1.156 0 0 0-.732-.732l-.774-.258a.145.145 0 0 1 0-.274l.774-.258c.346-.115.617-.386.732-.732L13.863.1z"/>
            </symbol>
            <symbol id="sun-fill" viewBox="0 0 16 16">
                <path d="M8 12a4 4 0 1 0 0-8 4 4 0 0 0 0 8zM8 0a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 0zm0 13a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-1 0v-2A.5.5 0 0 1 8 13zm8-5a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2a.5.5 0 0 1 .5.5zM3 8a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1h2A.5.5 0 0 1 3 8zm10.657-5.657a.5.5 0 0 1 0 .707l-1.414 1.415a.5.5 0 1 1-.707-.708l1.414-1.414a.5.5 0 0 1 .707 0zm-9.193 9.193a.5.5 0 0 1 0 .707L3.05 13.657a.5.5 0 0 1-.707-.707l1.414-1.414a.5.5 0 0 1 .707 0zm9.193 2.121a.5.5 0 0 1-.707 0l-1.414-1.414a.5.5 0 0 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .707zM4.464 4.465a.5.5 0 0 1-.707 0L2.343 3.05a.5.5 0 1 1 .707-.707l1.414 1.414a.5.5 0 0 1 0 .708z"/>
            </symbol>
        </svg>

        <div id="public-content" class="container">

            <ul class="navbar-nav position-absolute top-0 end-0 px-3 pt-2">
                <li class="nav-item dropdown text-end">
                    <a id="dropDownDark" class="nav-link dropdown-toggle d-inline-block text-end" href="#" role="button"
                       data-bs-toggle="dropdown"
                       aria-expanded="false">
                        <svg width="24" height="24" class="bi my-1 theme-icon-active" fill="currentColor">
                            <use href="#circle-half" fill="currentColor"></use>
                        </svg>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end m-0">
                        <li>
                            <button type="button" class="dropdown-item color-mode d-flex align-items-center"
                                    data-bs-theme-value="light">
                                <svg width="16" height="16" class="bi me-2 opacity-50 theme-icon"
                                     fill="currentColor">
                                    <use href="#sun-fill"></use>
                                </svg>
                                Light
                                <svg width="16" height="16" fill="currentColor" class="bi ms-auto d-none">
                                    <use href="#check2"></use>
                                </svg>
                            </button>
                        </li>
                        <li>
                            <button type="button" class="dropdown-item color-mode d-flex align-items-center"
                                    data-bs-theme-value="dark">
                                <svg width="16" height="16" class="bi me-2 opacity-50 theme-icon"
                                     fill="currentColor">
                                    <use href="#moon-stars-fill"></use>
                                </svg>
                                Dark
                                <svg width="16" height="16" fill="currentColor" class="bi ms-auto d-none">
                                    <use href="#check2"></use>
                                </svg>
                            </button>
                        </li>
                        <li>
                            <button type="button" class="dropdown-item color-mode d-flex align-items-center"
                                    data-bs-theme-value="auto">
                                <svg width="16" height="16" class="bi me-2 opacity-50 theme-icon"
                                     fill="currentColor">
                                    <use href="#circle-half"></use>
                                </svg>
                                Auto
                                <svg width="16" height="16" fill="currentColor" class="bi ms-auto d-none">
                                    <use href="#check2"></use>
                                </svg>
                            </button>
                        </li>
                    </ul>
                </li>
            </ul>

            <div class="col-xl-8 col-lg-10 col-12 mx-auto py-4">
                <div class="d-flex align-items-center">
                    <div class="fs-4 text-start text-body pb-3">
                        Ressourcen-Freigabe
                    </div>
                </div>
                <div class="card shadow-sm">
                    <div class="card-header fs-5">
                        <div class="d-flex align-items-center">

                            <div class="fs-5 text-body">
                                 Freigabe
                            </div>
                            <small class="ms-auto small fw-normal fs-6">
                                {{ email }}
                            </small>
                        </div>
                    </div>

                    <div class="card-body pb-4">
                        {% if request_uri %}
                            <h3 class="text-danger fw-semibold">{{ email }} <span class="text-body fw-normal">ist <span class="text-danger fw-semibold">nicht</span> Ihre E-Mail?</span></h3>
                            <a href="{{ request_uri }}">Account wechseln</a>
                            <hr>
                        {% endif %}
                        <p>
                            <b class="fw-semibold">{{ email }}:</b> &ndash; Freigabe für folgende Information:
                        </p>
                        <ul>
                            {% for scope in scopes %}
                                <li>{{ scope }}</li>
                            {% endfor %}
                        </ul>
                        {% if has_existing_scopes %}
                            <p>{{ email }}: Zusätzlich können Sie bereits auf folgende Informationen zugreifen:</p>
                            <ul>
                                {% for scope in existing_scopes %}
                                    <li>{{ scope }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                        <p>Um diesen Zugang zu ermöglichen, klicken Sie auf <span class="fw-semibold">Akzeptieren</span>.
                        </p>
                        <form action="{{ path('app_consent', app.request.query.all) }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('consent') }}">

                            <button class="btn btn-success-custom" tabindex="1"
                                    type="submit" name="consent" value="yes">Akzeptieren
                            </button>
                            <button class="btn btn-danger" tabindex="2"
                                    type="submit" name="consent" value="no">Ablehnen
                            </button>
                        </form>
                    </div>
                </div>
                <p class="card-body pt-3">
                    <a class="text-decoration-none" href="{{ path('admin_index') }}">Verwalten Sie den
                        Zugriff auf Ihre Informationen</a>
                </p>
            </div>
        </div>
    </main>
{% endblock %}
